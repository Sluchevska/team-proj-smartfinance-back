    },
    "/api/operations": {
      "post": {
        "tags": [
          "Operations"
        ],
        "summary": "Adding user income and expenses",
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "Operation's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OperationRequest"
