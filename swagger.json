      "delete": {
        "tags": [
          "Operations"
        ],
        "summary": "Delete operation",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "operationId",
            "required": true,
            "type": "string",
            "description": "Operation ID to delete"
          }
        ],
