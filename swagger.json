    "/api/operations/byday?{year}&{month}&{day}&{type}": {
      "get": {
        "tags": [
          "Operations"
        ],
        "summary": "Getting data for a specified day",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "year",
            "required": true,
            "type": "string",
            "description": "Operation year"
          },
          {
            "in": "query",
            "name": "month",
            "required": true,
            "type": "string",
            "description": "Operation month"
          },
          {
            "in": "query",
            "name": "day",
            "required": true,
            "type": "string",
            "description": "Operation day"
          },
          {
            "in": "query",
            "name": "type",
            "required": true,
            "type": "string",
            "description": "Operation type"
          }
